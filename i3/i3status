# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 10
        color = "#FFFFFF"
        color_good = "#AAFFAA"
        color_degraded = "#AAAAAA"
        color_bad = "#FFAAAA"
}

order += "frame default"

frame default {
    # format_separator = " <> "
    external_script spotify {
        cache_timeout = 3
        color = "#1BD85E"
        format = "{output}"
        script_path = "$HOME/.spotify_current.sh"
        on_click 1 = "exec qterminal -e 'zsh $HOME/.spotify_term_lyrics.sh'"
    }

    volume master {
        format = "%volume"
        format_muted = ""
        device = "default"
        mixer = "Master"
        mixer_idx = 0
    }

    arch_updates {
        hide_if_zero = true
    }

    wireless _first_ {
        format_up = " %ip @ %essid"
        format_down = ""
    }

    ethernet _first_ {
        format_up = " %ip"
        format_down = ""
    }

    diskdata {
        format = "{used}GB"
    }

    battery_level {
        format = "{ascii_bar} {time_remaining}"
        hide_seconds = true
        hide_when_full = true
    }

    clock {
        format="{Local}"
        format_time = ["%a %d.%m.%Y %X"]
    }
}
