# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        separator = " &lt;&gt; "
        colors = true
        interval = 10
        color = "#FFFFFF"
        color_good = "#AAFFAA"
        color_degraded = "#AAAAAA"
        color_bad = "#FFAAAA"
}

# order += "window_title_async"
order += "external_script"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "whatismyip"
order += "volume master"
order += "arch_updates"
# order += "load"
order += "battery_level"
order += "tztime local"

arch_updates {
    hide_if_zero = true
}

external_script {
    cache_timeout = 3
    color = "#1BD85E"
    format = "{output}"
    script_path = "$HOME/.spotify_current.sh"
    on_click 1 = "exec qterminal -e 'zsh $HOME/.spotify_term_lyrics.sh'"
}

battery_level {
    format = "{ascii_bar} {percent} {time_remaining}"
    hide_seconds = true
    hide_when_full = true
}

window_title_async {
        always_show = true
        empty_title = "i3"
}

volume master {
        format = "%volume"
        format_muted = ""
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = " %ip @ %essid"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = ""
}

battery 0 {
        format = " (%percentage %remaining)"
        last_full_capacity = true
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%a %d.%m.%Y %H:%M:%S"
}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
}
