## TESTING
# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-msg exit"

## RESIZING
mode "resize" {
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# TODO own modes?
bindsym $mod+r mode "resize"

mode "starter" {

    bindsym 1 workspace $ws1
    bindsym 2 workspace $ws2; exec [ $(ps h -C firefox | wc -l) = 0 ] && /usr/bin/firefox
    bindsym 3 workspace $ws3
    bindsym 4 workspace $ws4
    bindsym 5 workspace $ws5
    bindsym 6 workspace $ws6
    bindsym 7 workspace $ws7
    bindsym 8 workspace $ws8
    bindsym 9 workspace $ws9; exec /usr/bin/bash -c "ps aux > /tmp/.open && grep -e \"[D]iscord\" /tmp/.open && echo \"false\" > /tmp/.open || i3-msg exec discord-canary && echo \"true\" > /tmp/.open"

    # TODO single character starting apps
    bindsym l exec bash "$HOME/.screenlayout/mega.sh"
    bindsym b exec bash "$HOME/.screenlayout/megabzl.sh"
    bindsym r exec bash "$HOME/.feh_update.sh"

    bindsym o exec "bash $HOME/.screenlayout/megabzl.sh; sleep .5; bash $HOME/.screenlayout/mega.sh;bash $HOME/.feh_update"

    bindsym y exec zsh "$HOME/.ytd.sh"

    bindsym f mode "firefox"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+s mode "starter"

mode "firefox" {
    bindsym f exec firefox --new-window
    bindsym p exec firefox --private-window

    bindsym y exec firefox --new-window "https://youtube.com/feed/subscriptions"
    bindsym r exec firefox --new-window "https://reddit.com/"
    bindsym g exec firefox --new-window "https://github.com"
    bindsym w exec firefox --new-window "https://web.whatsapp.com"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


## BAR CONFIG
bar {
    status_command py3status
    mode hide
    position bottom
    colors {
        background $tb
        statusline $c1
        separator $tb

        focused_workspace  #FFFFFF #FFFFFF #000000
        active_workspace   #666666 #666666 #000000
        inactive_workspace #333333 #333333 #FFFFFF

        urgent_workspace   #C66262 #C66262 #FFFFFF
        binding_mode       #FF0000 #FF0000 #FFFFFF
    }
}

