new_window normal 1
new_float normal

#class                  border  backgr. text    indicator child_border
client.focused          $c1     $c1     $tb     $cb       $c1
client.focused_inactive $tb     $tb     $c1     $cb       $tb
client.unfocused        $tb     $tb     $c1     $cb       $tb
client.urgent           #990000 #ffffff #000000 #990000   #990000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

# Move floating windows
floating_modifier $mod

bindsym $mod+Return exec xfce4-terminal -e zsh
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id "rofi -show run -font 'Ttyp0 12' -terminal xfce4-terminal -fuzzy -opacity 90 -color-window '#1abc9c, #263238, #1abc9c' -color-normal '#1abc9c, #073642, #1abc9c, #073642, #1abc9c' -color-active '#23dcb7, #080092, #23dcb7, #ffffff, #000000' -color-urgent '#db5f73, #371e21, #db5f73, #ffffff, #d51635'"
# main: bg txt bg
# curr: bg txt
# wind: inner outer dots
bindsym $mod+m exec xfce4-terminal -e vifm
bindsym $mod+Shift+f fullscreen global
bindsym $mod+t exec thunar
