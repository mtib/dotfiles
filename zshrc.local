#!/usr/bin/zsh
if [[ -f $HOME/.keys ]] then
    source $HOME/.keys
fi

export GOPATH="$HOME/go"
export PATH="$PATH:$GOPATH/bin:$HOME/bin:$HOME/.gem/ruby/2.3.0/bin"
export TERM="xterm-256color"
export EDITOR="/usr/bin/vim"
export VISUAL="/usr/bin/gvim"
alias diff="git diff"
alias l="ls -lh"
alias la="ls -alah"
alias vis="vis -c ~/.visrc"

function gitaur {
	git clone https://aur.archlinux.org/$1
}
function aurinstall {
    gitaur $1
    cd $1
    makepkg -sri
    cd ..
    rm -rf $1
}

